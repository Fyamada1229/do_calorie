<div class="content_wrapper">

  <div class="left__menu">
  </div>
  <div class="main__menu">
    <h1 class="main__menu__about">一日のカロリーをシンプルに記録</h1>
    <%= link_to '本日のカロリーを入れましょう', new_calory_path %>

    <div class="main__menu__about__text">
    <% @calories.each do |calorie| %>
      <p><%= calorie.name %></p>
      <p><%= calorie.calorie_morning.to_i + calorie.calorie_lunch.to_i + calorie.calorie_night.to_i %>kcal</p> 
      <p><%= calorie.content %></p>
      <p><%= calorie.created_at.strftime('%Y/%m/%d %H:%M:%S') %></p>
    <% end %>
    </div>
    <h1>Ajax#index</h1>

  </div>

</div>
